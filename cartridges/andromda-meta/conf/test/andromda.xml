<andromda>
    <properties>
        <property name="failOnValidationErrors">false</property>
    </properties>
    <repositories>
        <repository name="netBeansMDR">
            <models>
                <model>
                    <uri>${andromda.cartridge.test.model.uri}</uri>
                    <moduleSearchLocations>
                        <location patterns="**/*.xml.zip">${basedir}/../../profiles/uml-1.4</location>
                        <location patterns="**/*.xml.zip">${basedir}/../../metafacades/uml/common</location>
                    </moduleSearchLocations>
                    <modelPackages>
                        <modelPackage process="false">org::andromda::metafacades::uml</modelPackage>
                    </modelPackages>
                </model>
            </models>            
        </repository>
    </repositories>
    <namespaces>
        <namespace name="meta">
            <properties>
                <property name="languageMappingsUri">Java</property>
                <property name="wrapperMappingsUri">JavaWrapper</property>
                <property name="facades">${test.output.dir}</property>
                <property name="facade-logics">${test.output.dir}</property>
                <property name="facades-to-impls">${test.output.dir}</property>
                <property name="facade-logic-impls">${test.output.dir}</property>
                <property name="overwrite">true</property>
            </properties>
        </namespace>
    </namespaces>
</andromda>