#macro ( renderAssociationEnd $field $indent )
${indent}<c:choose>
#set ($test = "empty manageableForm.${field.manageableName}BackingList")
${indent}    <c:when test="${${test}}">
${indent}        <select name="$field.manageableName" disabled="disabled"/>
${indent}    </c:when>
${indent}   <c:otherwise>
${indent}       <html:select name="manageableForm" property="$field.manageableName">
${indent}           <html:optionsCollection name="manageableForm" property="${field.manageableName}BackingList" label="label" value="value"/>
${indent}       </html:select>
${indent}   </c:otherwise>
${indent}</c:choose>
#end
