<project default="jar:install"
         xmlns:ant="jelly:ant"
         xmlns:j="jelly:core">
         
    <!-- ==================================================================
             Cleans the cartridge
         ================================================================== -->        
    <goal name="clean">
        <attainGoal name="clean:clean"/>
    </goal>
    
    <!-- ==================================================================
            Include the components jar into the resources after compilation
         ================================================================== -->
    <postGoal name="java:compile">
        <ant:mkdir dir="${maven.build.dest}/resources/WEB-INF/lib"/>
        <ant:copy file="${maven.repo.local}/${pom.groupId}/jars/${pom.groupId}-bpm4jsf-components-${pom.currentVersion}.jar"
            tofile="${maven.build.dest}/resources/WEB-INF/lib/${pom.groupId}-bpm4jsf-components.jar"/>
    </postGoal>

</project>


