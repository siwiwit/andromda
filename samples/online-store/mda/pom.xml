<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.samples.onlinestore</groupId>
        <artifactId>online-store</artifactId>
        <version>4.0-M1-SNAPSHOT</version>
    </parent>
    <artifactId>online-store-mda</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA Online Store MDA</name>
    <build>
        <sourceDirectory>${basedir}/src/uml</sourceDirectory>
        <filters>
            <filter>../project.properties</filter>
            <filter>mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <configurationUri>file:${basedir}/conf/andromda.xml</configurationUri>
                            <lastModifiedCheck>true</lastModifiedCheck>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-java-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-bpm4struts-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>provided</scope>
                    </dependency>              
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>