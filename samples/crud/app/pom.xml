<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.samples.crud</groupId>
        <artifactId>crud</artifactId>
        <version>4.0-M1-SNAPSHOT</version>
    </parent>
    <artifactId>crud-app</artifactId>
    <packaging>ear</packaging>
    <name>AndroMDA CRUD Application</name>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>crud-web</artifactId>
            <version>${version}</version>            
            <type>war</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <version>1.4</version>
                    <modules>
                        <webModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>crud-web</artifactId>
                            <contextRoot>/crud</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
