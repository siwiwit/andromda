<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.animalquiz</groupId>
        <artifactId>animal-quiz</artifactId>
        <version>3.2-RC1-SNAPSHOT</version>
    </parent>
    <artifactId>animal-quiz-mda</artifactId>
    <packaging>jar</packaging>
    <name>Animal Quiz MDA</name>
    <build>
        <defaultGoal>andromda:run</defaultGoal>
        <sourceDirectory>${basedir}/src/uml</sourceDirectory>
        <filters>
            <filter>../project.properties</filter>
            <filter>mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <configurationUri>file:${basedir}/conf/andromda.xml</configurationUri>
                            <lastModifiedCheck>true</lastModifiedCheck>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-spring-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-hibernate-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-webservice-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-java-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-bpm4struts-cartridge</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.translationlibraries</groupId>
                        <artifactId>andromda-ocl-query-library</artifactId>
                        <version>${version}</version>
                        <scope>runtime</scope>
                    </dependency>                    
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>