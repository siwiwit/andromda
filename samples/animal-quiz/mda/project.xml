<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../project.xml</extend>
    <name>Animal Quiz Hibernate</name>
    <artifactId>animal-quiz-mda</artifactId>
    <shortDescription>The Animal Quiz MDA Component</shortDescription>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-profile</artifactId>
            <version>${pom.currentVersion}</version>
            <type>xml.zip</type>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>maven-andromda-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
            <properties>
                <logical.languageMappingsUri>Java</logical.languageMappingsUri>
                <logical.sqlMappingsUri>Hypersonic</logical.sqlMappingsUri>
                <logical.jdbcMappingsUri>JDBC</logical.jdbcMappingsUri>
                <physical.maxSqlNameLength>30</physical.maxSqlNameLength>
                <physical.foreignKeySuffix>_FK</physical.foreignKeySuffix>
            </properties>
        </dependency>
        <!-- specify and configure our cartridges -->
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-hibernate-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <logical.hibernateTypeMappingsUri>Hibernate</logical.hibernateTypeMappingsUri>
                <entities>${maven.andromda.hibernate.generated.dir}</entities>
                <entity-impls>${maven.andromda.hibernate.manual.dir}</entity-impls>
                <session-beans>${maven.andromda.hibernate.generated.dir}</session-beans>
                <session-impls>${maven.andromda.hibernate.manual.dir}</session-impls>
            </properties>
        </dependency>  
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-webservice-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <type>jar</type>
            <properties>
                <applicationName>${animalQuiz.services.app.name}</applicationName>
                <wsdlSoapAddress>${animalQuiz.webservice.soap.address}</wsdlSoapAddress>
                <logical.schemaTypeMappingsUri>XmlSchema</logical.schemaTypeMappingsUri>
                <wsdls>${maven.andromda.webservice.wsdl.dir}</wsdls>
                <axis-configuration>${maven.andromda.webservice.axis.dir}</axis-configuration>
                <java-types>${maven.andromda.java.generated.dir}</java-types>
            </properties>
        </dependency>        
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-java-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <exceptions>${maven.andromda.java.generated.dir}</exceptions>
                <enumerations>${maven.andromda.java.generated.dir}</enumerations>
            </properties>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-bpm4struts-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <xhtml>false</xhtml>
                <security>false</security>
                <securityRealm>other</securityRealm>
                <forms>${maven.andromda.bpm4struts.generated.dir}</forms>
                <pages>${maven.andromda.bpm4struts.generated.dir}</pages>
                <actions>${maven.andromda.bpm4struts.generated.dir}</actions>
                <controllers>${maven.andromda.bpm4struts.generated.dir}</controllers>
                <controller-impls>${maven.andromda.bpm4struts.manual.java.dir}</controller-impls>
                <messages>${maven.andromda.bpm4struts.generated.dir}</messages>
                <configuration>${maven.andromda.bpm4struts.generated.dir}/WEB-INF</configuration>
                <xdoclet-merge>${maven.andromda.bpm4struts.generated.dir}/merge</xdoclet-merge>
            </properties>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-query-library</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-validation-library</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
    </dependencies>
</project>
