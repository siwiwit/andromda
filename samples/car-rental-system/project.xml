<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../../project.xml</extend>
  	<id>car-rental-system</id>
  	<groupId>andromda-samples</groupId>
  	<name>The Car Rental Sample</name>
  	<currentVersion>3.0-SNAPSHOT</currentVersion>
  	<shortDescription>The Car Rental Sample</shortDescription>
  	<description>
  		Contains the car rental sample project.
  	</description>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
    	</resources>
  	</build>

</project>
