<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<id>car-rental-sample-web</id>
  	<name>Car Rental Sample Web</name>
  	<shortDescription>Car Rental Sample Web</shortDescription>
  	<description>
  		Contains the car rental sample project's web application.
  	</description>
	<dependencies>      
		<dependency>
			<groupId>andromda-samples</groupId>
			<artifactId>car-rental-sample-mda</artifactId>
			<version>${pom.currentVersion}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>andromda-samples</groupId>
			<artifactId>car-rental-sample-common</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>
		<dependency>
			<groupId>andromda-samples</groupId>
			<artifactId>car-rental-sample-ejb</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>andromda-cartridges</groupId>
			<artifactId>andromda-struts-cartridge</artifactId>
			<version>${pom.currentVersion}</version>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>3.2.3</version>
		</dependency>
		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.3</version>
		</dependency>
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts</artifactId>
			<version>1.1</version>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<!-- TLDs -->
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-bean</artifactId>
			<version>1.1</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>	
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-html</artifactId>
			<version>1.1</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>	
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-logic</artifactId>
			<version>1.1</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>		
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-template</artifactId>
			<version>1.1</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
	</dependencies>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
		<resources>
	      	<resource>
		        <directory>conf</directory>
	        	<includes>
	        		<include>**/*</include>
	        	</includes>
	      	</resource>
    	</resources>
  	</build>
</project>
