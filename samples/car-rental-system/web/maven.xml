<project xmlns:ant="jelly:ant"
         xmlns:maven="jelly:maven">
	
  	<preGoal name="java:compile">
  		
  		<!-- add the paths of the generated source to the
  		     maven compile path -->
	 	<ant:path
	       	id="andromda.struts.gen.src"
	       	location="${maven.build.src}"/>
		<maven:addPath
	       	id="maven.compile.src.set"
	       	refid="andromda.struts.gen.src"/>
		
  	</preGoal>
  	
  	<postGoal name="war:webapp">
		<ant:copy
			file="${maven.build.src}/WEB-INF/struts-config.xml"
			tofile="${maven.war.webapp.dir}/WEB-INF/struts-config.xml"/>
  	</postGoal>
  		 
</project>
