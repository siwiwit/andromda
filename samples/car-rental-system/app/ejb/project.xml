<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../../project.xml</extend>
	<id>car-rental-sample-ejb-app</id>
	<name>Car Rental Sample EJB Application</name>
	<shortDescription>
		The AndromMDA Car Rental System Sample using 
		CMP EJB for backend persistence.
	</shortDescription>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-ejb</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-common</artifactId>
			<version>${pom.currentVersion}</version>
	      	<properties>
	        	<ear.module>true</ear.module>
	     	</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-web</artifactId>
			<version>${pom.currentVersion}</version>
			<type>war</type>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
				<ear.appxml.war.context-root>/carrental-ejb</ear.appxml.war.context-root>
	     	</properties>
		</dependency>
  		<dependency>
     		<groupId>commons-beanutils</groupId>
      		<artifactId>commons-beanutils</artifactId>
            <version>${commonsBeanutils}</version>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
    	</dependency>  
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
     		<version>${commonsCollections}</version>
			<properties>
	        	<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>	
	</dependencies> 
</project>
