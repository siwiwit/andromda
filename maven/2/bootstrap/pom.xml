            <artifactId>andromda-meta-cartridge</artifactId>
            <version>${version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.andromda.bootstrap</groupId>
            <artifactId>andromda-utils</artifactId>
            <version>${version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.andromda.bootstrap.translationlibraries</groupId>
