        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
            <scope>runtime</scope>
        </dependency>
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>jmiutils</artifactId>
     		<version>20050711</version>
