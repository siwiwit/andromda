<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../../project.xml</extend>
    <artifactId>andromda-ant</artifactId>
    <name>AndroMDA Ant</name>
    <description>
		This application generates an AndroMDA user's working environment for J2EE
        applications. By using this little tool the end-user does not need to take care
        of setting a set of Ant build.xml files and corresponding properties, it will
        be generated.
    </description>
    <shortDescription>AndroMDA Ant development environment generator</shortDescription>
    <issueTrackingUrl>${issue.tracking.location}/BrowseProject.jspa?id=10001&amp;decorator=none</issueTrackingUrl>
    <repository>
        <connection>scm:cvs:${repository.connection.mode}:${repository.connection.user}@cvs.sourceforge.net:/cvsroot/andromda:andromda/ant</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/andromda/ant/</url>
    </repository>
    <dependencies>
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.6.2</version>
        </dependency>
        <dependency>
            <groupId>velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>1.4</version>
            <properties>
                <jar.bundle>true</jar.bundle>
                <jar.manifest.classpath>true</jar.manifest.classpath>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
     		<version>3.1</version>
            <properties>
                <jar.bundle>true</jar.bundle>
                <jar.manifest.classpath>true</jar.manifest.classpath>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.0</version>
            <properties>
                <jar.bundle>true</jar.bundle>
                <jar.manifest.classpath>true</jar.manifest.classpath>
            </properties>
        </dependency>
        <dependency>
            <groupId>logkit</groupId>
            <artifactId>logkit</artifactId>
            <version>1.0.1</version>
            <properties>
                <jar.bundle>true</jar.bundle>
                <jar.manifest.classpath>true</jar.manifest.classpath>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-jelly</groupId>
            <artifactId>commons-jelly-tags-velocity</artifactId>
            <version>20030303.205659</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>target/resources</directory>
                <includes>
                    <include>*.zip</include>
                </includes>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-changes-plugin</report>
    </reports>
</project>
