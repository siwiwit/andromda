#elseif ($jsf)
#if ($jbossSeam)
        <dependency>
            <groupId>org.jboss</groupId>
            <artifactId>jboss-seam-debug</artifactId>
            <version>unknown</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/target/src/WEB-INF/lib/jboss-seam-debug.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.jboss</groupId>
            <artifactId>jboss-seam-ui</artifactId>
            <version>unknown</version>
