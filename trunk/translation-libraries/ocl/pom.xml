<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.translationlibraries</groupId>
        <artifactId>andromda-translation-libraries</artifactId>
        <version>3.1-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-ocl-translation-libraries</artifactId>
    <packaging>pom</packaging>
    <name>AndroMDA OCL Translation Libraries</name>
    <build>
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>META-INF/**/*</include>
                </includes>
            </resource>
        </resources>
    </build>
    <modules>
        <module>core</module>
        <module>testsuite</module>
        <module>andromda-query</module>
        <module>andromda-validation</module>
    </modules>
</project>