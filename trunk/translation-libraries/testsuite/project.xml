<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-library-testsuite</artifactId>
    <name>AndroMDA Translation-Library Test Suite</name>
    <package>org.andromda.translation.testsuite</package>
    <description>
  		Provides an AndroMDA Translation-Library Test Suite, for testing
  		translation libraries as they're being written.
  	</description>
    <shortDescription>AndroMDA Translation-Library Test Suite.</shortDescription>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jboss</groupId>
            <artifactId>javassist</artifactId>
            <version>2.6</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <properties/>
</project>