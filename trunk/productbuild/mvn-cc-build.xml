<project name="maven2-build" default="default">
	<!-- This artifact is to run maven2 builds  -->
	
	<echo message="basedir:${basedir}"/>
	
	<target name="default">
		<exec dir="${basedir}" executable="mvn" >
			<arg value="clean"/>
        </exec> 
		<exec dir="${basedir}" executable="mvn" >
			<arg value="install"/>
        </exec> 
		<antcall target="deploy-install-web"/>
	</target>

	<target name="deploy-install-web">
		<copy todir="/var/www/andromda/maven2">
			<fileset dir="/var/maven2/repository/andromda">
				<include name="**/*"/>
			</fileset>
		</copy>
	</target>	
	
</project>
