<project>
    <extend>../project.xml</extend>
    <name>AndroMDA Database Cartridge</name>
    <artifactId>andromda-database-cartridge</artifactId>
    <currentVersion>1.0-SNAPSHOT</currentVersion>
    <organization/>
    <description>
        Generates database DDL.
  	</description>
    <shortDescription>AndroMDA Database Cartridge</shortDescription>
    <developers>
        <developer>
            <name>Chad Brandon</name>
            <id>cwbrandon</id>
            <email>cwbrandon@users.sourceforge.net</email>
            <roles/>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-profile</artifactId>
            <version>${andromda.version}</version>
            <type>xml.zip</type>
        </dependency>
		<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>maven-andromda-plugin</artifactId>
	      	<version>${andromda.version}</version>
	      	<type>plugin</type>
	      	<properties>
	      		<languageMappingsUri>Java</languageMappingsUri>
                <wrapperMappingsUri>JavaWrapper</wrapperMappingsUri>
	      		<facades>${basedir}/target/src/java</facades>
	      		<facade-logics>${basedir}/target/src/java</facade-logics>
	      		<facades-to-impls>${basedir}/target/src/java</facades-to-impls>
	      		<facade-logic-impls>${basedir}/src/java</facade-logic-impls>
	      	</properties>
	    </dependency>
		<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>andromda-core</artifactId>
	      	<version>${andromda.version}</version>
	    </dependency>
		<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>andromda-metafacades-uml</artifactId>
	      	<version>${andromda.version}</version>
	    </dependency> 
    	<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>andromda-meta-cartridge</artifactId>
	      	<version>${andromda.version}</version>
	    </dependency> 
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.6.1</version>
        </dependency>  	    
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency>  
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>  
        <!-- test dependencies -->
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-cartridge-plugin</artifactId>
            <version>${andromda.version}</version>
            <type>plugin</type>
            <properties/>
        </dependency>
    </dependencies> 
    <build>
        <sourceDirectory>src/java</sourceDirectory>
    </build>
    <properties/>
</project>