<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../../project.xml</extend>
    <artifactId>andromda-transformation-spring</artifactId>
    <currentVersion>1.0-SNAPSHOT</currentVersion>
    <name>AndroMDA Spring Transformation</name>
    <description>
        The AndroMDA Spring transformation. 
    </description>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>${pom.groupId}-core</artifactId>
            <version>${andromda.version}</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>${pom.groupId}-transformer-atl</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.1</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>        
        <!-- ATL libraries -->
        <dependency>
            <groupId>atl</groupId>
            <artifactId>atl</artifactId>
            <version>20050915</version>
        </dependency>
        <dependency>
            <groupId>atl</groupId>
            <artifactId>ATL-importer</artifactId>
            <version>20050915</version>
        </dependency>
        <dependency>
            <groupId>atl</groupId>
            <artifactId>ebnfinjector</artifactId>
            <version>20050915</version>
        </dependency>
        <dependency>
            <groupId>atl</groupId>
            <artifactId>emf4atl</artifactId>
            <version>20050915</version>
        </dependency>
        <dependency>
            <groupId>atl</groupId>
            <artifactId>mdr4atl</artifactId>
            <version>20050915</version>
        </dependency>
        <dependency>
            <groupId>antlr</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.5</version>
        </dependency>
        <!-- EMF libraries -->
        <dependency>
            <groupId>emf</groupId>
            <artifactId>emf-common</artifactId>
            <version>2.1.0</version>
        </dependency>
        <dependency>
            <groupId>emf</groupId>
            <artifactId>emf-ecore</artifactId>
            <version>2.1.0</version>
        </dependency>
        <dependency>
            <groupId>emf</groupId>
            <artifactId>emf-ecore.xmi</artifactId>
            <version>2.1.0</version>
        </dependency>
        <!-- MDR libraries -->
        <dependency>
            <groupId>jmi</groupId>
            <artifactId>mof</artifactId>
            <version>20030918</version>
        </dependency>
        <dependency>
            <groupId>jmi</groupId>
            <artifactId>jmi</artifactId>
            <version>20030918</version>
        </dependency>
        <dependency>
            <groupId>jmi</groupId>
            <artifactId>jmiuml</artifactId>
            <version>1.4di</version>
        </dependency>
        <dependency>
            <groupId>mdr</groupId>
            <artifactId>jmiutils</artifactId>
            <version>20050630</version>
        </dependency>
        <dependency>
            <groupId>mdr</groupId>
            <artifactId>mdrapi</artifactId>
            <version>20050630</version>
        </dependency>
        <dependency>
            <groupId>mdr</groupId>
            <artifactId>nbmdr</artifactId>
            <version>20050630</version>
        </dependency>
        <dependency>
            <groupId>mdr</groupId>
            <artifactId>openide-util</artifactId>
            <version>20050630</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>${pom.groupId}-metamodels-spring</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>

        <!-- Unit test classes -->
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>conf/test</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
                <resource>
                    <directory>src/test/uml</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
