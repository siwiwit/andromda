<cartridge name="ejb">
    <property name="persistence" value="ejb" />

<!-- these are the new, official stereotypes -->
    <stereotype name="entity" />
    <stereotype name="service" />

<!-- the following stereotypes are deprecated and will be removed in the next release. -->
    <stereotype name="EntityBean" />
    <stereotype name="StatelessSessionBean" />
    <stereotype name="StatefulSessionBean" />

    <outlet name="session-beans" />
    <outlet name="entity-beans" />
    <outlet name="session-impls" />
    <outlet name="entity-impls" />

<!-- the official template definitions -->
    <template
        stereotype="entity"
        sheet="templates/EntityBean.vsl"
        outputPattern="{0}/{1}Bean.java"
        outlet="entity-beans"
        overWrite="true"
    />

    <template
        stereotype="entity"
        sheet="templates/EntityBeanImpl.vsl"
        outputPattern="{0}/{1}BeanImpl.java"
        outlet="entity-impls"
        overWrite="false"
    />

    <template
        stereotype="entity"
        sheet="templates/EntityBeanCMP.vsl"
        outputPattern="{0}/{1}BeanCMP.java"
        outlet="entity-beans"
        overWrite="true"
    />

<!--
     The following two definitions map services to stateless session beans.
     This is incomplete. The final version should map a service to session bean
     and the template itself should decide to generate a stateless or stateful
     session bean, based on the fact that the UML class contains attributes or not.
     (Matthias Bohlen)
-->
    <template
        stereotype="service"
        sheet="templates/StatelessSessionBean.vsl"
        outputPattern="{0}/{1}Bean.java"
        outlet="session-beans"
        overWrite="true"
    />

    <template
        stereotype="service"
        sheet="templates/StatelessSessionBeanImpl.vsl"
        outputPattern="{0}/{1}BeanImpl.java"
        outlet="session-impls"
        overWrite="false"
    />

<!-- the following template definitions use deprecated stereotypes and will be removed in the next release. -->
    <template
        stereotype="EntityBean"
        sheet="templates/EntityBean.vsl"
        outputPattern="{0}/{1}Bean.java"
        outlet="entity-beans"
        overWrite="true"
    />

    <template
        stereotype="EntityBean"
        sheet="templates/EntityBeanImpl.vsl"
        outputPattern="{0}/{1}BeanImpl.java"
        outlet="entity-impls"
        overWrite="false"
    />

    <template
        stereotype="EntityBean"
        sheet="templates/EntityBeanCMP.vsl"
        outputPattern="{0}/{1}BeanCMP.java"
        outlet="entity-beans"
        overWrite="true"
    />

    <template
        stereotype="StatelessSessionBean"
        sheet="templates/StatelessSessionBean.vsl"
        outputPattern="{0}/{1}Bean.java"
        outlet="session-beans"
        overWrite="true"
    />

    <template
        stereotype="StatelessSessionBean"
        sheet="templates/StatelessSessionBeanImpl.vsl"
        outputPattern="{0}/{1}BeanImpl.java"
        outlet="session-impls"
        overWrite="false"
    />

    <template
        stereotype="StatefulSessionBean"
        sheet="templates/StatefulSessionBean.vsl"
        outputPattern="{0}/{1}Bean.java"
        outlet="session-beans"
        overWrite="true"
    />

    <template
        stereotype="StatefulSessionBean"
        sheet="templates/StatefulSessionBeanImpl.vsl"
        outputPattern="{0}/{1}BeanImpl.java"
        outlet="session-impls"
        overWrite="false"
    />
</cartridge>
