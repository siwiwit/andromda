<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-spring-cartridge</artifactId>
    <name>AndroMDA Spring Cartridge</name>
    <package>org.andromda.cartridges.spring</package>
    <description>
        Generates spring with Hibernate
  	</description>
    <shortDescription>AndroMDA Spring Cartridge</shortDescription>
    <developers>
        <developer>
            <name>Chad Brandon</name>
            <id>cwbrandon</id>
            <email>cwbrandon@users.sourceforge.net</email>
            <roles/>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>maven-andromda-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
            <properties>
                <!-- default -->
                <languageMappingsUri>Java</languageMappingsUri>
                <wrapperMappingsUri>JavaWrapper</wrapperMappingsUri>
                <sqlMappingsUri>HypersonicSql</sqlMappingsUri>
                <jdbcMappingsUri>JDBC</jdbcMappingsUri>
                <maxSqlNameLength>30</maxSqlNameLength>
                <foreignKeySuffix>_FK</foreignKeySuffix>
            </properties>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-meta-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <!-- facades: only used when generating from the meta-model -->
                <facades>${meta.facades}</facades>
                <facade-logics>${meta.facade.logics}</facade-logics>
                <facades-to-impls>${meta.facades.to.impls}</facades-to-impls>
                <facade-logic-impls>${meta.facade.logic.impls}</facade-logic-impls>
                <!-- spring : only used for howto model (will move to plugin) -->
                <hibernateTypeMappingsUri>${howto.hibernateTypeMappingsUri}</hibernateTypeMappingsUri>
                <dataSource>${howto.dataSource}</dataSource>
                <hibernateDialect>${howto.hibernateDialect}</hibernateDialect>
                <hibernateUseQueryCache>${howto.hibernateUseQueryCache}</hibernateUseQueryCache>
                <hibernateCacheProvider>${howto.hibernateCacheProvider}</hibernateCacheProvider>
                <hibernateQueryCacheFactory>${howto.hibernateQueryCacheFactory}</hibernateQueryCacheFactory>
                <defaultHibernateGeneratorClass>${howto.defaultHibernateGeneratorClass}</defaultHibernateGeneratorClass>
                <hibernateDefaultCascade>${howto.hibernateDefaultCascade}</hibernateDefaultCascade>
                <daos>${howto.daos}</daos>
                <dao-impls>${howto.daoImpls}</dao-impls>
                <spring-configuration>${howto.springConfiguration}</spring-configuration>
                <services>${howto.services}</services>
                <service-impls>${howto.serviceImpls}</service-impls>
                <session-ejbs>${howto.sessionEjbs}</session-ejbs>
                <exceptions>${howto.exceptions}</exceptions>
            </properties>
        </dependency>
        <!-- added for the generation of 'howto' code files -->
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-java-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-validation-library</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
            <properties/>
        </dependency>
        <!-- test dependencies -->
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-cartridge-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-query-library</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <cartridge.testDependency/>
            </properties>
        </dependency>
    </dependencies>
</project>