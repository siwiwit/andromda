<project>
    <extend>../project.xml</extend>
    <name>WebService Cartridge</name>
    <artifactId>andromda-webservice-cartridge</artifactId>
    <description>
		Produces Apache Axis WSDD (Web Service Deployment Descriptors and WSDLs) 
		used in conjunction with Session EJBs generated from 'Service'
		stereotypes (or just plain POJOs) defined within a model.
    </description>
    <shortDescription>WebService Cartridge</shortDescription>
    <issueTrackingUrl>http://team.andromda.org:8080/jira/BrowseProject.jspa?id=10021&amp;decorator=none</issueTrackingUrl>
    <developers>
        <developer>
            <name>Chad Brandon</name>
            <id>cwbrandon</id>
            <email>cwbrandon@users.sourceforge.net</email>
            <roles>
                <role>Developer</role>
                <role>Documentation</role>
            </roles>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>maven-andromda-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
            <properties>
                <languageMappingsUri>Java</languageMappingsUri>
                <wrapperMappingsUri>JavaWrapper</wrapperMappingsUri>
                <facade-logic-impls>${basedir}/src/java</facade-logic-impls>
                <facades-to-impls>${basedir}/target/src</facades-to-impls>
                <facade-logics>${basedir}/target/src</facade-logics>
                <facades>${basedir}/target/src</facades>
            </properties>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-meta-cartridge</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-validation-library</artifactId>
            <version>${pom.currentVersion}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>${commonsLang}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
     		<version>${commonsCollections}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>${commonsBeanutils}</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>${log4j}</version>
            <properties/>
        </dependency>
        <!-- test dependencies -->
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-cartridge-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
            <properties/>
        </dependency>
    </dependencies>
    <properties/>
    <reports>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-jira-plugin</report>
    </reports>
</project>