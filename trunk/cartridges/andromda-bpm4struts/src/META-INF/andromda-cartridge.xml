    <template
        path="templates/StrutsMessagesJsp.vsl"
        outputPattern="layout/messages.jsp"
        outlet="pages"
        overwrite="false">
        <modelElements variable="class">
            <modelElement stereotype="FrontEndApplication"/>
        </modelElements>
    </template>

</cartridge>
