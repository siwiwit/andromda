    </template>

    <template
        path="templates/StrutsLoginFormJsp.vsl"
        outputPattern="login/login-form.jsp"
        outlet="pages"
        overwrite="false">
        <modelElements variable="class">
            <modelElement stereotype="FrontEndApplication"/>
