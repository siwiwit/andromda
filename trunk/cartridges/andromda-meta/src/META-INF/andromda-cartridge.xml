<cartridge name="meta">

    <!-- define the template objects that are made availble to the template -->
    <templateObject name="str" className="org.apache.commons.lang.StringUtils"/>
    <templateObject name="metaUtils" className="org.andromda.cartridges.meta.MetaCartridgeUtils"/>

    <!-- the template definitions -->
    <template
        path="templates/MetafacadeLogic.vsl"
        outputPattern="$generatedFile"
        outlet="facade-logics"
        overwrite="true">
        <modelElements variable="metafacade">
            <modelElement stereotype="metafacade"/>
        </modelElements>
    </template>

    <template
        path="templates/MetafacadeLogicImpl.vsl"
        outputPattern="$generatedFile"
        outlet="facade-logic-impls"
        overwrite="false">
        <modelElements variable="metafacade">
            <modelElement stereotype="metafacade"/>
        </modelElements>
    </template>

    <template
        path="templates/Metafacade.vsl"
        outputPattern="{0}/{1}.java"
        outlet="facades"
        overwrite="true">
        <modelElements variable="metafacade">
            <modelElement stereotype="metafacade"/>
        </modelElements>
    </template>

    <template
        path="templates/MetafacadesToImpls.vsl"
        outputPattern="metafacade-impls.properties"
        outlet="facades-to-impls"
        overwrite="true"
        outputToSingleFile="true">
        <modelElements variable="metafacades">
            <modelElement stereotype="metafacade"/>
        </modelElements>
    </template>

</cartridge>
