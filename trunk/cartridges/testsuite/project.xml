<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-cartridge-testsuite</artifactId>
    <name>AndroMDA Cartridge Test Suite</name>
    <package>org.andromda.cartridge.testsuite</package>
    <description>
  		Provides an AndroMDA Cartridge Test Suite, for testing
  		cartridges throughout the cartridge lifecycle.
  	</description>
    <shortDescription>AndroMDA Carridge Test Suite.</shortDescription>
    <dependencies>
        <dependency>
            <groupId>xjavadoc</groupId>
            <artifactId>xjavadoc</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>xmlunit</groupId>
            <artifactId>xmlunit</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <properties/>
</project>