<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda</groupId>
        <artifactId>andromda</artifactId>
        <version>3.1-SNAPSHOT</version>
    </parent>
    <groupId>org.andromda.cartridges</groupId>
    <artifactId>andromda-cartridges</artifactId>
    <packaging>pom</packaging>
    <name>AndroMDA Cartridges</name>
    <dependencies>
        <dependency>
            <groupId>org.andromda</groupId>
            <artifactId>andromda-utils</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
    <build>
        <filters>
            <filter>${basedir}/mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <buildSourceDirectory>${basedir}/target/src</buildSourceDirectory>
                    <configurationUri>file:${basedir}/../conf/andromda.xml</configurationUri>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-datatype</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-webservice</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-service</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-process</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-meta</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-xml</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-persistence</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-presentation</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-meta-cartridge</artifactId>
                        <version>${version}</version>
                    </dependency>
                </dependencies>    
            </plugin>
        </plugins>    
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src</directory>
                <excludes>
                    <exclude>java/**/*.java</exclude>
                    <exclude>uml/**/*</exclude>
                    <exclude>test/**/*</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>target/src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>    
    </build>
    <modules>
        <module>andromda-bpm4struts</module>
        <module>andromda-ejb</module>
        <module>andromda-hibernate</module>
        <module>andromda-java</module>
        <module>andromda-jbpm</module>
        <module>andromda-jsf</module>
        <module>andromda-jsf/components</module>
        <module>andromda-meta</module>
        <module>andromda-spring</module>
        <module>andromda-webservice</module>
        <module>andromda-xmlschema</module>
        <module>testsuite</module>
    </modules>
</project>