<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../samples</directory>
      <outputDirectory>samples</outputDirectory>
      <excludes>
        <exclude>conf/**</exclude>
        <exclude>*.*</exclude>        
        
        <exclude>**/target/**</exclude>
        <exclude>**/*.log</exclude>
        <exclude>**/*.exc</exclude>        
                
        <exclude>**/.project</exclude>
        <exclude>**/.classpath</exclude>
                
        <exclude>**/*.iml</exclude>        
      </excludes>
    </fileSet>
    <fileSet>
        <directory>../ant/andromda/src/ant</directory>
        <outputDirectory>/</outputDirectory>
        <includes>
            <include>build.xml</include>
        </includes>
    </fileSet>
  </fileSets>    
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.andromda*:*</include>
      </includes>
      <excludes>
        <exclude>org.andromda.bootstrap*:*</exclude>
        <exclude>org.andromda.profiles*:*</exclude>
        <exclude>org.andromda.samples*:*</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/andromda</outputDirectory>
      <unpack>false</unpack>      
    </dependencySet>
    
    <dependencySet>
      <includes>
        <include>org.andromda.profiles*:*</include>
      </includes>      
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/andromda/${artifact.groupId}</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
<!--    
    <dependencySet>
      <includes>
        <include>org.andromda.samples*:*</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/samples/${artifact.groupId}</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
-->    
    <dependencySet>
      <excludes>
        <exclude>org.andromda*:*</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
</assembly>