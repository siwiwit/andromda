<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.animalquiz</groupId>
        <artifactId>animal-quiz</artifactId>
        <version>3.2-RC1-SNAPSHOT</version>
    </parent>
    <artifactId>animal-quiz-app</artifactId>
    <packaging>ear</packaging>
    <name>Animal Quiz Application</name>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>animal-quiz-common</artifactId>
            <version>${version}</version>            
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>animal-quiz-core</artifactId>
            <version>${version}</version>  
            <type>ejb</type>          
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>animal-quiz-web</artifactId>
            <version>${version}</version>            
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>animal-quiz-webservice</artifactId>
            <version>${version}</version>      
            <type>war</type>      
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <modules>
                        <javaModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>animal-quiz-common</artifactId>
                        </javaModule>
                        <ejbModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>animal-quiz-core</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>animal-quiz-web</artifactId>
                            <contextRoot>/animal-quiz</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>animal-quiz-webservice</artifactId>
                            <contextRoot>/animal-quiz-ws</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
