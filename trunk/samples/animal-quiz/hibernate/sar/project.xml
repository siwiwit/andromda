<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<artifactId>animal-quiz-hibernate-sar</artifactId>
  	<name>Animal Quiz Sample Hibernate Sar</name>
  	<shortDescription>The Animal Quiz Sample Hibernate Sar Component</shortDescription>
  	<description>
  		Contains the Animal Quiz Hibernate sar module.
  	</description>
	<dependencies>      
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>animal-quiz-hibernate-ejb</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>
  	<build>    
		<resources>
	  		<resource>
				<directory>target/xdoclet/hibernate</directory>
	        	<includes>
	        		<include>**/*</include>
	        	</includes>
	  		</resource>
	  		<resource>
				<directory>conf</directory>
	        	<includes>
	        		<include>*</include>
	        	</includes>
	  		</resource>
		</resources>
  	</build>
</project>
