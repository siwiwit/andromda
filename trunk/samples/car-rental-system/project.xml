<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<artifactId>${application.id}</artifactId>
  	<name>The Car Rental System</name>
  	<shortDescription>The Car Rental Application</shortDescription>
  	<description>
  		Contains the Car Rental System Project.
  	</description>
  	<package>${application.package}</package>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
    	</resources>
  	</build>
</project>
