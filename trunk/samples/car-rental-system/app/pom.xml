<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.samples.carrental</groupId>
        <artifactId>car-rental-system</artifactId>
        <version>4.0-M1-SNAPSHOT</version>
    </parent>
    <artifactId>car-rental-system-app</artifactId>
    <packaging>ear</packaging>
    <name>AndroMDA Car Rental System Application</name>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>${pom.groupId}</groupId>
                <artifactId>car-rental-system-common</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>${pom.groupId}</groupId>
                        <artifactId>car-rental-system-mda</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>commons-digester</groupId>
                <artifactId>commons-digester</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>xml-apis</groupId>
                        <artifactId>xml-apis</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>car-rental-system-common</artifactId>
            <version>${version}</version>            
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>car-rental-system-core</artifactId>
            <version>${version}</version>  
            <type>ejb</type>          
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>car-rental-system-web</artifactId>
            <version>${version}</version>            
            <type>war</type>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <version>1.4</version>
                    <modules>
                        <javaModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>car-rental-system-common</artifactId>
                        </javaModule>
                        <ejbModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>car-rental-system-core</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>${pom.groupId}</groupId>
                            <artifactId>car-rental-system-web</artifactId>
                            <contextRoot>/car-rental-system</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
