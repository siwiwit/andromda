<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.repositories</groupId>
        <artifactId>andromda-repositories</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-repository-mdr</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA MDR Repository (Common)</name>
  	<description>
  	    This MDR repository module allows AndroMDA to use the NetBeans MDR as a repository for loading, 
  	    and querying object models.
  	</description>
  	<scm>
        <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/repositories/mdr/common</connection>
        <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/repositories/mdr/common</developerConnection>
        <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>jmiutils</artifactId>
     		<version>20050711</version>
    	</dependency>  
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>mdrapi</artifactId>
     		<version>20050711</version>
    	</dependency>  
     	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>nbmdr</artifactId>
     		<version>20050711</version>
    	</dependency>     	
     	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>openide-util</artifactId>
     		<version>20050711</version>
    	</dependency> 
    	<dependency> 
    		<groupId>jmi</groupId>
      		<artifactId>mof</artifactId>
     		<version>20030918</version>
    	</dependency>  
    	<dependency> 
    		<groupId>jmi</groupId>
      		<artifactId>jmi</artifactId>
     		<version>20030918</version>
    	</dependency>  
	</dependencies>	
    <build>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-install-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>install</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <installDirectory>${basedir}/../../../lib</installDirectory>
                </configuration>
            </plugin>            
        </plugins>
    </build>    
</project>