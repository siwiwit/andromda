<andromda>
    <properties>
        <property name="cartridgeFilter">meta</property>
        <property name="modelValidation">true</property>
    </properties>
    <repositories>
        <repository name="netBeansMDR">
            <models>
                <model>
                    <uri>${maven.andromda.model.uri}</uri>
                    <moduleSearchLocations>
                        <location>${maven.repo.local}/andromda/xml.zips</location>
                        <location patterns="**/*.xml.zip">${settings.localRepository}/org/andromda/profiles</location>
                    </moduleSearchLocations>
                    <constraints>
                        <constraint enforce="false">org::andromda::cartridges::meta::metafacades::Metafacade::a metafacade must either extend an existing metafacade or have a directy dependency to a metaclass</constraint>
                    </constraints>
                </model>
            </models>            
        </repository>
    </repositories>
    <namespaces>
        <namespace name="meta">
            <properties>
                <property name="languageMappingsUri">Java</property>
                <property name="wrapperMappingsUri">JavaWrapper</property>
                <property name="facades">${maven.build.src}</property>
                <property name="facade-logics" ignore="true"/>
                <property name="facade-logic-impls" ignore="true"/> 
            </properties>
        </namespace>
    </namespaces>
</andromda>