<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../../project.xml</extend>
  	<id>andromda-uml-metafacades</id>
  	<groupId>andromda</groupId>
  	<name>Core UML Metafacades</name>
  	<shortDescription>Core UML Metafacade Libraries</shortDescription>
  	<inceptionYear>2003</inceptionYear>
  	<currentVersion>3.0-SNAPSHOT</currentVersion>
	<organization>
		<name>AndroMDA Team</name>
		<url>http://www.andromda.org</url>
		<logo>./images/andromda-logo.jpg</logo>
	</organization>
  	<logo>./images/sourceforge.bmp</logo>
  	<url>http://www.sourceforge.net</url>
  	<description>
  		The core UML metafacade libraries.  Each metafacade library within this
  		project is used to access to a UML meta model.  
  		These are generated by the 'meta' cartridge.
  	</description>
	<dependencies>     
    	<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>maven-andromda-plugin</artifactId>
	      	<version>${pom.currentVersion}</version>
	      	<type>plugin</type>
	    </dependency>
    	<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>andromda-core</artifactId>
	      	<version>${pom.currentVersion}</version>
	    </dependency>
    	<dependency> 
    		<groupId>andromda-cartridges</groupId>
      		<artifactId>andromda-meta-cartridge-bootstrap</artifactId>
     		<version>3.0-SNAPSHOT</version>
    	</dependency> 	 
    	<dependency> 
    		<groupId>commons-collections</groupId>
      		<artifactId>commons-collections</artifactId>
     		<version>3.0</version>
    	</dependency>
	</dependencies>
	
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
    	<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    	<!-- Unit test classes -->
    	<unitTest>
	      	<includes>
	        	<include>**/*Test.java</include>
	     	</includes>
			<resources>
				<resource>
					<directory>src/test/java</directory>
		  			<excludes>
		    			<excludes>**/*.java</excludes>
		  			</excludes>
		  		</resource>
				<resource>
					<directory>src/test/conf</directory>
		  			<includes>
		    			<include>**/*.xml</include>
		    			<include>**/*.properties</include>
		  			</includes>
		  		</resource>
				<resource>
					<directory>src/test/uml</directory>
		  			<includes>
		    			<include>**/*</include>
		  			</includes>
		  		</resource>
			</resources>	 
    	</unitTest>   
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
	  		<resource>
				<directory>target/src/andromda/meta</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	  		</resource>
    	</resources>
  	</build>

</project>
