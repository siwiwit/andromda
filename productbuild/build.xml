<project name="AndroMDAAsAWholePackage" default="dist">

    <property name="version" value="3.0.0" />
    <property name="version.suffix" value="300" />

    <!-- ============================================================= -->
    <!--               Directory settings                              -->
    <!-- ============================================================= -->

    <!-- destination directories -->
    <property name="dist.dir"      value="dist"   />
    <property name="andromda.home" location="${dist.dir}" />

    <!-- ============================================================= -->
    <!--               Internal targets                                -->
    <!-- ============================================================= -->

    <target name="buildComponent">
        <echo message="buildComponent ${component.name} ${prefix}"/>
        <ant inheritAll="false" dir="${component.name}" target="dist" >
          <property name="andromda.home" location="${andromda.home}"/>
          <property file="build.properties" />
        </ant>
        <move taskname="${component.name}" todir="${dist.dir}/${prefix}">
          <fileset dir="${component.name}/dist">
            <include name="**/*"/>
          </fileset>
        </move>
    </target>

    <target name="cleanComponent">
        <echo message="cleanComponent ${component.name}"/>
        <ant inheritAll="false" dir="${component.name}" target="clean"/>
    </target>

    <!-- ============================================================= -->
    <!--               Highlevel user tasks                            -->
    <!-- ============================================================= -->

    <!-- Setup directory structure -->
    <target name="init">
        <tstamp/>
        <mkdir dir="${dist.dir}"/>
    </target>

    <!-- Remove directory structure -->
    <target name="clean" description="Removes all generated files">
        <delete dir="${dist.dir}"/>

        <antcall target="cleanComponent">
          <param name="component.name" value="andromda"/>
        </antcall>

        <antcall target="cleanComponent">
          <param name="component.name" value="cartridges"/>
        </antcall>

        <antcall target="cleanComponent">
          <param name="component.name" value="samples"/>
        </antcall>

        <antcall target="cleanComponent">
          <param name="component.name" value="documentation"/>
        </antcall>
    </target>

    <target name="dist" depends="clean,init"
            description="Builds core, cartridges, samples and documentation">

        <!-- zip everything into the source archive -->
        <zip zipfile="${dist.dir}/andromda-src-${version.suffix}.zip">
            <zipfileset dir="." prefix="andromda-src">
                <include name="**/*" />
                <exclude name="**/*.log" />
            </zipfileset>
        </zip>

        <antcall target="buildComponent">
          <param name="component.name" value="andromda"/>
          <param name="prefix" value="andromda-core"/>
        </antcall>

        <antcall target="buildComponent">
          <param name="component.name" value="cartridges"/>
          <param name="prefix" value="cartridges"/>
        </antcall>

        <antcall target="buildComponent">
          <param name="component.name" value="samples"/>
          <param name="prefix" value="samples"/>
        </antcall>

        <antcall target="buildComponent">
          <param name="component.name" value="documentation"/>
          <param name="prefix" value="docs"/>
        </antcall>

        <!-- zip everything into the release archive -->
        <zip zipfile="${dist.dir}/andromda-bin-${version.suffix}.zip">
            <zipfileset dir="${dist.dir}" prefix="andromda-bin">
                <include name="**/*" />
                <exclude name="andromda-bin-${version.suffix}.zip" />
                <exclude name="andromda-src-${version.suffix}.zip" />
            </zipfileset>
        </zip>

    </target>

</project>
