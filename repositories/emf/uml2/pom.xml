<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.repositories</groupId>
        <artifactId>andromda-repositories</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-repository-emf-uml2</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA EMF UML2 Repository</name>
  	<description>This EMF UML2 repository module allows AndroMDA to load Eclipse UML2 models into EMF.</description>
    <scm>
        <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/repositories/emf/uml2</connection>
        <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/repositories/emf/uml2</developerConnection>
        <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <dependencies> 
		<dependency> 
    		<groupId>${pom.groupId}</groupId>
      		<artifactId>andromda-repository-emf</artifactId>
     		<version>${pom.version}</version>
    	</dependency> 
        <dependency> 
            <groupId>org.andromda.metafacades</groupId>
            <artifactId>andromda-metafacades-emf-uml2</artifactId>
            <version>${pom.version}</version>
        </dependency> 
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>uml2</artifactId>
			<version>1.1.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.core</groupId>
                    <artifactId>runtime</artifactId>
                </exclusion>
            </exclusions>
		</dependency>
	</dependencies>	
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>        
    </build>   
</project>