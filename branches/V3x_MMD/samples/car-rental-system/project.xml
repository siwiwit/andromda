<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../../project.xml</extend>
  	<id>andromda-car-rental-system</id>
  	<groupId>andromda</groupId>
  	<name>The Car Rental Sample</name>
  	<currentVersion>3.0-SNAPSHOT</currentVersion>
  	<shortDescription>The Car Rental Sample</shortDescription>
  	<description>
  		Contains the car rental sample project.
  	</description>
	<dependencies>     
    	<dependency>
	      	<groupId>andromda</groupId>
	      	<artifactId>andromda-core</artifactId>
	      	<version>${pom.currentVersion}</version>
	    </dependency>
	</dependencies>
	
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
    	</resources>
  	</build>

</project>
