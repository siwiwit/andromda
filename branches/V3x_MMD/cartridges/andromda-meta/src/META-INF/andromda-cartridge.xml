<cartridge name="meta">

    <!-- define the template objects that are made availble to the template -->
    <templateObject name="str" className="org.andromda.core.common.StringUtilsHelper"/>

    <!-- the template definitions -->
    <template
        sheet="templates/MetaclassDecorator.vsl"
        outputPattern="{0}/{1}.java"
        outlet="facades"
        overWrite="true">
        <stereotype name="Decorator" />
    </template>

    <template
        sheet="templates/MetaclassDecoratorImpl.vsl"
        outputPattern="{0}/{1}Impl.java"
        outlet="facade-impls"
        overWrite="false">
        <stereotype name="Decorator" />
    </template>

    <template
        sheet="templates/MetafacadeInterface.vsl"
        outputPattern="$myOutputFile"
        outlet="facade-interfaces"
        overWrite="true">
        <stereotype name="Decorator" />
    </template>

</cartridge>
