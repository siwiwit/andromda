<cartridge name="meta">
    <stereotype name="Decorator" />
    <stereotype name="metafacade" />

<!-- the outlet names -->
    <outlet name="decorators" />
    <outlet name="decorator-impls" />
    <outlet name="facades" />
    <outlet name="facade-impls" />

<!-- the template definitions -->
    <template
        stereotype="Decorator"
        sheet="templates/MetaclassDecorator.vsl"
        outputPattern="{0}/{1}.java"
        outlet="decorators"
        overWrite="true"
    />

    <template
        stereotype="Decorator"
        sheet="templates/MetaclassDecoratorImpl.vsl"
        outputPattern="{0}/{1}Impl.java"
        outlet="decorator-impls"
        overWrite="false"
    />

    <template
        stereotype="metafacade"
        sheet="templates/MetaclassDecorator.vsl"
        outputPattern="{0}/{1}.java"
        outlet="facades"
        overWrite="true"
    />

    <template
        stereotype="metafacade"
        sheet="templates/MetaclassDecoratorImpl.vsl"
        outputPattern="{0}/{1}Impl.java"
        outlet="facade-impls"
        overWrite="false"
    />

</cartridge>
