<project name="model-query" default="report">

   <property file="build.properties" />
   
   <target name="clean">
     <delete dir="build"/>
   </target>
   
   <target name="init">
     <mkdir dir="build/output"/>
   </target>
   
   <path id="classpath">
   	  <pathelement path="${build.classpath}"/>
   	  <pathelement location="src/andromda-cartridge"/>
   </path>

   <target name="report" depends="init">
   
   		<echo message="build.classpath =${build.classpath}" />
   		
        <taskdef name="andromda"
                 classname="org.andromda.core.anttasks.AndroMDAGenTask"
                 classpathref="classpath"/>

        <andromda basedir="."
                 modelURL="${model.url}"
                 lastModifiedCheck="false"
                 typeMappings="${andromda.home}/src/xml/TypeMapping.xml">
                 
          <outlet cartridge="mycartridge" outlet="model" dir="build/output" />
          
        </andromda>
        
    </target>
    
</project>