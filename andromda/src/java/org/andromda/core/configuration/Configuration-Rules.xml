<?xml version="1.0"?>

<!-- these are the digester rules used to instantiate and configure
     an org.andromda.core.mapping.Mappings instance using Apache's Digester -->
<digester-rules>

    <pattern value="andromda">

        <object-create-rule
              classname="org.andromda.core.configuration.Configuration" />

        <pattern value="properties/property">

            <object-create-rule
                classname="org.andromda.core.configuration.Property" />

            <set-properties-rule>
                 <alias attr-name="name" prop-name="name" />
            </set-properties-rule>

            <call-method-rule
                methodname="setValue"
                paramcount="1" />

            <call-param-rule
                paramnumber="0"/>

            <set-next-rule methodname="addProperty" />

        </pattern>
        
        <pattern value="server">
            
            <object-create-rule
                classname="org.andromda.core.configuration.Server" />

            <pattern value="host">

                <call-method-rule
                    methodname="setHost"
                    paramcount="1"/>

                <call-param-rule
                    paramnumber="0"/>

            </pattern>

            <pattern value="port">

                <call-method-rule
                    methodname="setPort"
                    paramcount="1"/>

                <call-param-rule
                    paramnumber="0"/>

            </pattern>

            <set-next-rule methodname="setServer" />
            
        </pattern>

        <pattern value="models/model">

            <object-create-rule
                classname="org.andromda.core.configuration.Model" />

            <pattern value="uri">

                <call-method-rule
                    methodname="setUri"
                    paramcount="1"/>

                <call-param-rule
                    paramnumber="0"/>

            </pattern>

            <pattern value="moduleSearchLocations/location">

                <call-method-rule
                    methodname="addModuleSearchLocation"
                    paramcount="1"/>

                <call-param-rule
                    paramnumber="0"/>

            </pattern>

            <pattern value="modelPackages/modelPackage">

                <object-create-rule
                    classname="org.andromda.core.configuration.ModelPackage" />

                <set-properties-rule>
                     <alias attr-name="process" prop-name="process" />
                </set-properties-rule>

                <call-method-rule
                    methodname="setName"
                    paramcount="1"/>

                <call-param-rule
                    paramnumber="0"/>

                <set-next-rule methodname="addPackage" />

            </pattern>

            <set-properties-rule>
                 <alias attr-name="lastModifiedCheck" prop-name="lastModifiedCheck" />
            </set-properties-rule>

            <set-next-rule methodname="addModel" />

        </pattern>

        <pattern value="transformations/transformation">

            <object-create-rule
                classname="org.andromda.core.configuration.Transformation" />

            <pattern value="uri">

                <call-method-rule
                    methodname="setUri"
                    paramcount="1" />

                <call-param-rule
                    paramnumber="0"/>

            </pattern>

            <set-properties-rule>
                 <alias attr-name="output" prop-name="outputLocation" />
            </set-properties-rule>

            <set-next-rule methodname="addTransformation" />

        </pattern>

        <pattern value="mappingsSearchLocations/location">

            <call-method-rule
                methodname="addMappingsSearchLocation"
                paramcount="1"/>

            <call-param-rule
                paramnumber="0"/>

        </pattern>

        <pattern value="namespaces/namespace">

            <object-create-rule
                classname="org.andromda.core.configuration.Namespace" />

            <set-properties-rule>
                 <alias attr-name="name" prop-name="name" />
            </set-properties-rule>

            <pattern value="properties/property">

                <object-create-rule
                    classname="org.andromda.core.configuration.Property" />

                <set-properties-rule>
                     <alias attr-name="name" prop-name="name" />
                </set-properties-rule>

                <set-properties-rule>
                     <alias attr-name="ignore" prop-name="ignore" />
                </set-properties-rule>

                <call-method-rule
                    methodname="setValue"
                    paramcount="1" />

                <call-param-rule
                    paramnumber="0"/>

                <set-next-rule methodname="addProperty" />

            </pattern>

            <set-next-rule methodname="addNamespace" />

        </pattern>

    </pattern>

</digester-rules>