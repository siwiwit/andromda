<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.translationlibraries</groupId>
        <artifactId>andromda-ocl-translation-libraries</artifactId>
        <version>3.2-RC1-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-ocl-validation-library</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA OCL Validation Translation-Library</name>
    <description>Translates OCL into validation code for any platform.</description>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>andromda-ocl-translation-core</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.andromda.metafacades</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
    <build>
        <filters>
            <filter>mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-install-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>install</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <installDirectory>${basedir}/../../../lib</installDirectory>
                </configuration>
            </plugin>            
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-plugin</artifactId>  
                <executions>
                    <execution>
                        <goals>
                            <goal>test-translation-library</goal>
                        </goals>
                        <configuration>
                            <configurationUri>file:${basedir}/../conf/test/andromda.xml</configurationUri>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>