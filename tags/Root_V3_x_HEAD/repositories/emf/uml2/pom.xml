<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.repositories</groupId>
        <artifactId>andromda-repositories</artifactId>
        <version>3.2-RC1-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-repository-emf-uml2</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA EMF UML2 Repository</name>
  	<description>This EMF UML2 repository module allows AndroMDA to load Eclipse UML2 models into EMF.</description>
    <dependencies> 
		<dependency> 
    		<groupId>${pom.groupId}</groupId>
      		<artifactId>andromda-repository-emf</artifactId>
     		<version>${version}</version>
    	</dependency> 
		<dependency>
			<groupId>org.eclipse.uml2</groupId>
			<artifactId>eclipse-uml2-common</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.uml2</groupId>
			<artifactId>eclipse-uml2</artifactId>
			<version>1.1.1</version>
		</dependency>
	</dependencies>	
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>