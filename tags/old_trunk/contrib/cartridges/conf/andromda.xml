<andromda>
    <properties>
        <property name="cartridgeFilter">meta</property>
    </properties>
    <repositories>
        <repository name="netBeansMDR">
            <models>
                <model>
                    <uri>${maven.andromda.model.uri}</uri>
                    <moduleSearchLocations>
                        <location>${maven.repo.local}/andromda/xml.zips</location>
                    </moduleSearchLocations>
                    <modelPackages>
                        <modelPackage process="false">org::andromda::metafacades::uml</modelPackage>
                    </modelPackages>
                </model>
            </models>            
        </repository>
    </repositories>
    <namespaces>
        <namespace name="meta">
            <properties>
                <property name="languageMappingsUri">Java</property>
                <property name="wrapperMappingsUri">JavaWrapper</property>
                <property name="facades">${maven.build.src}/java</property>
                <property name="facade-logics">${maven.build.src}/java</property>
                <property name="facades-to-impls">${maven.build.src}/java</property>
                <property name="facade-logic-impls">${basedir}/src/java</property>
            </properties>
        </namespace>
    </namespaces>
</andromda>