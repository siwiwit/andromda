<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.andromdapp.projects</groupId>
        <artifactId>andromda-andromdapp-projects</artifactId>
        <version>4.0-M1-SNAPSHOT</version>
    </parent>
    <groupId>org.andromda.andromdapp.projects</groupId>
    <artifactId>andromda-andromdapp-project-richclient-ant</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA Rich Client Ant Project</name>
    <description>
       A project template for AndroMDA powered projects that do not necessarily have a web browser
       as the client technology. The generated project is for server side code (deployed on
       JBoss), and generic client side code to access published services via remote invocation.
    </description>
    <inceptionYear>2005</inceptionYear>
    <dependencies>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-mock</artifactId>
            <version>1.2.5</version>
                <exclusions>
                     <exclusion>
                         <groupId>javax.transaction</groupId>
                         <artifactId>jta</artifactId>
                     </exclusion>
                </exclusions>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>    
                <excludes>
                    <exclude>**/configuration.xml</exclude>
                </excludes>        
            </resource>
            <resource>
                <directory>${pom.basedir}/../../../../etc/mda/uml</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <targetPath>templates/richclient/ant/mda/src/uml</targetPath> 
            </resource>
            <resource>
                <directory>${pom.basedir}/../../../../etc/mappings</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <targetPath>templates/richclient/ant/mda/src/mappings</targetPath> 
            </resource>
        </resources>
    </build>
</project>
