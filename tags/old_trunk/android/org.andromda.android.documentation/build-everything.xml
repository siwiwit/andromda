<?xml version="1.0"?>
<project name="org.andromda.android.documentation" default="build.doc.html1">
    <description>
        Android Documentation
    </description>

    <property file="build.properties" />

    <property name="xdocs.dir" value="${basedir}/xdocs" />
    <property name="build.dir" value="../org.andromda.android.help" />

    <property name="stylesheet" value="${docbook-xsl.eclipse-xsl.file}" />

    <path id="saxon.classpath">
        <pathelement location="${saxon.lib.path}" />
        <pathelement path="${java.class.path}" />
    </path>

    <target name="build.doc.html1">
        <java fork="true" dir="${build.dir}" failonerror="true" classname="com.icl.saxon.StyleSheet">
            <classpath refid="saxon.classpath" />
            <arg value="${xdocs.dir}/index.xml" />
            <arg value="${stylesheet}" />
            <arg value="eclipse.plugin.id=org.andromda.android.help" />
            <arg value="eclipse.plugin.name=Android Help Plug-in" />
            <arg value="eclipse.plugin.provider=AndroMDA.org" />
        </java>
     </target>

    <target name="build.doc.html">
        <xslt in="${xdocs.dir}/index.xml" out="${build.dir}/index.html" style="${stylesheet}">
            <classpath refid="saxon.classpath" />
            <xmlcatalog>
                <dtd publicId="-//OASIS//DTD DocBook XML V4.3//EN" location="${docbook.dir}/docbookx.dtd" />
                <dtd publicId="-//OASIS//ENTITIES DocBook Notations V4.3//EN" location="${docbook.dir}/dbnotnx.mod" />
                <dtd publicId="-//OASIS//ENTITIES DocBook Character Entities V4.3//EN" location="${docbook.dir}/dbcentx.mod" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Arrow Relations//EN//XML" location="${docbook.dir}/ent/iso-amsa.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Binary Operators//EN//XML" location="${docbook.dir}/ent/iso-amsb.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Delimiters//EN//XML" location="${docbook.dir}/ent/iso-amsc.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Negated Relations//EN//XML" location="${docbook.dir}/ent/iso-amsn.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Ordinary//EN//XML" location="${docbook.dir}/ent/iso-amso.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Math Symbols: Relations//EN//XML" location="${docbook.dir}/ent/iso-amsr.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Box and Line Drawing//EN//XML" location="${docbook.dir}/ent/iso-box.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Russian Cyrillic//EN//XML" location="${docbook.dir}/ent/iso-cyr1.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Non-Russian Cyrillic//EN//XML" location="${docbook.dir}/ent/iso-cyr2.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Diacritical Marks//EN//XML" location="${docbook.dir}/ent/iso-dia.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Latin 1//EN//XML" location="${docbook.dir}/ent/iso-lat1.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Added Latin 2//EN//XML" location="${docbook.dir}/ent/iso-lat2.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Greek Letters//EN//XML" location="${docbook.dir}/ent/iso-grk1.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Monotoniko Greek//EN//XML" location="${docbook.dir}/ent/iso-grk2.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Greek Symbols//EN//XML" location="${docbook.dir}/ent/iso-grk3.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Alternative Greek Symbols//EN//XML" location="${docbook.dir}/ent/iso-grk4.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Numeric and Special Graphic//EN//XML" location="${docbook.dir}/ent/iso-num.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES Publishing//EN//XML" location="${docbook.dir}/ent/iso-pub.ent" />
                <dtd publicId="ISO 8879:1986//ENTITIES General Technical//EN//XML" location="${docbook.dir}/ent/iso-tech.ent" />
                <dtd publicId="-//OASIS//DTD DocBook CALS Table Model V4.3//EN" location="${docbook.dir}/calstblx.dtd" />
                <dtd publicId="-//OASIS//DTD XML Exchange Table Model 19990315//EN" location="${docbook.dir}/soextblx.dtd" />
                <dtd publicId="-//OASIS//ELEMENTS DocBook Information Pool V4.3//EN" location="${docbook.dir}/dbpoolx.mod" />
                <dtd publicId="-//OASIS//ELEMENTS DocBook Document Hierarchy V4.3//EN" location="${docbook.dir}/dbhierx.mod" />
                <dtd publicId="-//OASIS//ENTITIES DocBook Additional General Entities V4.3//EN" location="${docbook.dir}/dbgenent.mod" />
                <dtd publicId="-//OASIS//ENTITIES DocBook Notations V4.3//EN" location="${docbook.dir}/dbnotnx.mod" />
                <dtd publicId="-//OASIS//ENTITIES DocBook Character Entities V4.3//EN" location="${docbook.dir}/dbcentx.mod" />
                <dtd publicId="-//OASIS//ELEMENTS DocBook XML HTML Tables V4.3//EN" location="${docbook.dir}/htmltblx.mod" />
            </xmlcatalog>
            <param name="eclipse.plugin.id" expression="org.andromda.android.help" />
            <param name="eclipse.plugin.name" expression="Android Help Plug-in" />
            <param name="eclipse.plugin.provider" expression="AndroMDA.org" />
            <param name="indent" expression="yes" />
            <param name="chunker.output.indent" expression="yes" />
        </xslt>
    </target>

</project>
