<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<artifactId>andromda-uml-metafacades</artifactId>
  	<name>Core UML Metafacades</name>
  	<shortDescription>Core UML Metafacade Libraries</shortDescription>
  	<description>
  		The core UML metafacade libraries.  Each metafacade library within this
  		project is used to access to a UML meta model.  
  		These are generated by the 'meta' cartridge.
  	</description>
  	<repository>
    	<connection>scm:cvs:${repository.connection.mode}:${repository.connection.user}@cvs.sourceforge.net:/cvsroot:andromda/metafacades/uml</connection>
    	<url>http://cvs.sourceforge.net/viewcvs.py/andromda/metafacades/uml</url>
  	</repository>
	<dependencies>     
    	<dependency>
	      	<groupId>${pom.groupId}</groupId>
	      	<artifactId>andromda-core</artifactId>
	      	<version>${pom.currentVersion}</version>
	    </dependency> 
    	<dependency>
    	    <groupId>${pom.groupId}</groupId>
    	    <artifactId>andromda-ocl-translation-core</artifactId>
    	    <version>${pom.currentVersion}</version>
            <type>jar</type>
    	</dependency> 
    	<dependency> 
    		<groupId>commons-collections</groupId>
      		<artifactId>commons-collections</artifactId>
     		<version>3.1</version>
    	</dependency>
	    <dependency>
	      	<groupId>commons-lang</groupId>
	      	<artifactId>commons-lang</artifactId>
	      	<version>2.0</version>
	    </dependency>	
	</dependencies>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
    	<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    	<!-- Unit test classes -->
    	<unitTest>
	      	<includes>
	        	<include>**/*Test.java</include>
	     	</includes>
			<resources>
				<resource>
					<directory>src/test/java</directory>
		  			<excludes>
		    			<excludes>**/*.java</excludes>
		  			</excludes>
		  		</resource>
				<resource>
					<directory>src/test/conf</directory>
		  			<includes>
		    			<include>**/*.xml</include>
		    			<include>**/*.properties</include>
		  			</includes>
		  		</resource>
				<resource>
					<directory>src/test/uml</directory>
		  			<includes>
		    			<include>**/*</include>
		  			</includes>
		  		</resource>
			</resources>	 
    	</unitTest>   
		<resources>
	      	<resource>
		        <directory>src/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
	  		<resource>
				<directory>target/src</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	  		</resource>
    	</resources>
  	</build>
</project>