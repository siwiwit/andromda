<cartridge>

    <templateEngine>
        <macrolibrary name="templates/SpreadSheet.vm"/>
    </templateEngine>

    <!-- define the template objects that are made availble to the template -->
    <templateObject name="stringUtils" className="org.apache.commons.lang.StringUtils"/>

    <template
        path="templates/SpreadSheet.vsl"
        outputPattern="ProjectCosts.xls"
        outlet="spreadsheet"
        overwrite="true"
        outputToSingleFile="true"
        outputOnEmptyElements="true">
        <modelElements variable="packages">
            <modelElement>
                <type name="org.andromda.cartridges.costcalculator.metafacades.PackageCosts"/>
            </modelElement>
        </modelElements>
    </template>

</cartridge>
