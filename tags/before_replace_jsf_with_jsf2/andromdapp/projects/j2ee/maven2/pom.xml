<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.andromdapp.projects</groupId>
        <artifactId>andromda-andromdapp-projects</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>    
    <artifactId>andromda-andromdapp-project-j2ee-maven2</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA J2EE Maven2 Project</name>
    <description>AndroMDA powered J2EE Maven2 Application</description>
    <scm>
      <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/andromdapp/projects</connection>
      <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/andromdapp/projects</developerConnection>
      <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>    
                <excludes>
                    <exclude>**/configuration.xml</exclude>
                </excludes>        
            </resource>
            <resource>
                <directory>${project.basedir}/../../../../andromda-etc/mda/uml</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <targetPath>templates/j2ee/maven2/mda/src/main/uml</targetPath> 
            </resource>
        </resources>
    </build>
</project>