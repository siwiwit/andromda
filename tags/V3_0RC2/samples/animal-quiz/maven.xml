<project xmlns:ant="jelly:ant"
         xmlns:maven="jelly:maven"
         xmlns:j="jelly:core"
         xmlns:util="jelly:util">
         
    <ant:property environment="env"/>

       <!-- ==================================================================
            Deploy/Undeploy the Application
           ================================================================== -->
    <goal name="deploy">
        <maven:maven
            descriptor="${basedir}/app/project.xml"
            goals="deploy"/>
    </goal>

    <goal name="undeploy">
        <maven:maven
            descriptor="${basedir}/app/project.xml"
            goals="undeploy"/>
    </goal>

    <goal name="web">
        <maven:maven
            descriptor="${basedir}/web/project.xml"
            goals="war:install"/>
    </goal>

    <goal name="webservice">
        <maven:maven
            descriptor="${basedir}/webservice/project.xml"
            goals="war:install"/>
    </goal>

    <goal name="core">
        <maven:maven
            descriptor="${basedir}/core/project.xml"
            goals="ejb:install"/>
    </goal>

    <goal name="common">
        <maven:maven
            descriptor="${basedir}/common/project.xml"
            goals="jar:install"/>
    </goal>

    <goal name="mda">
        <maven:maven
            descriptor="${basedir}/mda/project.xml"
            goals="pom:install"/>
    </goal>

    <!-- ============================================================
             Initializes the database schema for this application
         ============================================================ -->
    <goal name="create-schema">
        <j:set var="script" value="${dataSource.sql.init}"/>
        <attainGoal name="execute-script"/>
    </goal>

    <!-- ============================================================
             Drops the database schema for this application
         ============================================================ -->
    <goal name="drop-schema">
        <j:set var="script" value="${dataSource.sql.drop}"/>
        <attainGoal name="execute-script"/>
    </goal>

    <!-- ============================================================
             Executes the given DDL script
         ============================================================ -->
    <goal name="execute-script">
        <util:file var="scriptFile" name="${script}"/>
        <j:if test="${scriptFile.exists()}">
            <ant:sql driver="${dataSource.driver.class}" 
                     src="${scriptFile}"
                     url="${dataSource.url}" 
                     userid="${dataSource.user}" 
                     password="${dataSource.password}" 
                     onerror="${dataSource.sql.onError}">
                <ant:classpath>
                    <ant:pathelement location="${dataSource.driver.jar}"/>
                </ant:classpath>
            </ant:sql>
        </j:if>
    </goal>

</project>
