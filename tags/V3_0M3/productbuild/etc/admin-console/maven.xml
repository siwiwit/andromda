<project default="install"
    xmlns:ant="jelly:ant"
    xmlns:maven="jelly:maven">

    <goal name="install">
        <attainGoal name="multiproject:install"/>
    </goal>

    <goal name="clean">
        <attainGoal name="multiproject:clean"/>
        <ant:delete>
          <ant:fileset dir=".">
            <ant:include name="**/*.log*"/>
            <ant:exclude name="maven.log"/>
          </ant:fileset>
        </ant:delete>
    </goal>

    <goal name="web">
        <maven:maven
            descriptor="${basedir}/web/project.xml"/>
    </goal>

    <goal name="core">
        <maven:maven
            descriptor="${basedir}/core/project.xml"/>
    </goal>

    <goal name="mda">
        <maven:maven
            descriptor="${basedir}/mda/project.xml"/>
    </goal>

    <!-- convenient goals for when testing the admin-console code -->
    <goal name="deploy">
        <maven:maven
            descriptor="${maven.src.dir}/../web/project.xml"
            goals="deploy"/>
    </goal>

    <goal name="undeploy">
        <maven:maven
            descriptor="${maven.src.dir}/../web/project.xml"
            goals="undeploy"/>
    </goal>

</project>
