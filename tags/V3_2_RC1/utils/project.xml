<project>
    <extend>../project.xml</extend>
    <name>AndroMDA Utilities</name>
    <artifactId>andromda-utils</artifactId>
    <package>org.andromda.utils</package>
    <description>
        This artifact collects the utility classes that are shared
        between other AndroMDA artifacts.
    </description>
    <shortDescription>AndroMDA utility classes</shortDescription>
<!--
    <issueTrackingUrl>${issue.tracking.location}/BrowseProject.jspa?id=10003&amp;decorator=none</issueTrackingUrl>
-->
    <repository>
        <connection>scm:cvs:${repository.connection.mode}:${repository.connection.user}@cvs.sourceforge.net:/cvsroot/andromda:andromda/utils</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/andromda/utils/</url>
    </repository>
    <dependencies>
    	<dependency>
	      	<groupId>${pom.groupId}</groupId>
	      	<artifactId>${pom.groupId}-core</artifactId>
	      	<version>${pom.currentVersion}</version>
	    </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency> 
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-changes-plugin</report>
    </reports>
    <properties/>
</project>