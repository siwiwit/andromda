<cartridge name="bpm4struts">
   <property name="workflow" value="bpm4struts"/>

   <stereotype name="FrontEndUseCase"/>
   <stereotype name="FrontEndView"/>
   <stereotype name="FrontEndModel"/>
    <stereotype name="FrontEndConfiguration"/>
    <stereotype name="FrontEndExceptionHandler"/>

   <outlet name="actions"/>
   <outlet name="pages"/>
   <outlet name="forms"/>
   <outlet name="config"/>

   <template
      stereotype="FrontEndModel"
      sheet="templates/StrutsForm.vsl"
      outputPattern="{0}/{1}.java"
      outlet="forms"
      overWrite="true"
      transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

   <template
      stereotype="FrontEndUseCase"
      sheet="templates/StrutsAction.vsl"
      outputPattern="{0}/{1}.java"
      outlet="actions"
      overWrite="false"
      transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

   <template
      stereotype="FrontEndUseCase"
      sheet="templates/StrutsActionAbstract.vsl"
      outputPattern="{0}/{1}Abstract.java"
      outlet="actions"
      overWrite="true"
      transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

   <template
      stereotype="FrontEndView"
      sheet="templates/StrutsJSP.vsl"
      outputPattern="{0}/{1}.jsp"
      outlet="pages"
      overWrite="false"
      transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

    <template
        stereotype="FrontEndConfiguration"
        sheet="templates/StrutsConfig.vsl"
        outputPattern="struts-config.xml"
        outlet="config"
        overWrite="true"
        transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

    <template
        stereotype="FrontEndExceptionHandler"
        sheet="templates/StrutsExceptionHandler.vsl"
        outputPattern="{0}/{1}.java"
        outlet="actions"
        overWrite="true"
        transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

    <template
        stereotype="FrontEndExceptionHandler"
        sheet="templates/StrutsExceptionPage.vsl"
        outputPattern="{0}/{1}.jsp"
        outlet="pages"
        overWrite="true"
        transformClass="org.andromda.cartridges.bpm4struts.StrutsScriptHelper"/>

</cartridge>
