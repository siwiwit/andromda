<cartridge name="struts">
    
    <!-- define the template objects that are made availble to the template -->
    <templateObject name="str" className="org.andromda.core.common.StringUtilsHelper"/>

    <template
      sheet="templates/StrutsForm.vsl"
      outputPattern="{0}/{1}.java"
      outlet="forms"
      overWrite="true">
        <modelElements variable="class">
            <modelElement stereotype="WebForm"/>  
        </modelElements>  
    </template>

    <template
      sheet="templates/StrutsAction.vsl"
      outputPattern="{0}/{1}.java"
      outlet="actions"
      overWrite="false">
        <modelElements variable="class">
            <modelElement stereotype="WebAction"/>  
        </modelElements>  
    </template>

    <template
      sheet="templates/StrutsJSP.vsl"
      outputPattern="{1}.jsp"
      outlet="pages"
      overWrite="false">
        <modelElements variable="class">
            <modelElement stereotype="WebPage"/>  
        </modelElements>   
    </template>

    <template
      sheet="templates/StrutsConfig.vsl"
      outputPattern="WEB-INF/struts-config.xml"
      outlet="config"
      overWrite="true"
      outputToSingleFile="true">
        <modelElements variable="classes">
            <modelElement stereotype="WebForm" variable="webForms"/>
            <modelElement stereotype="WebAction" variable="webActions"/>
        </modelElements>  
    </template>

</cartridge>
